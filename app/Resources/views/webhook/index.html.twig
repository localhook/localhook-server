{% extends 'base.html.twig' %}

{% block body %}
    <h1><i class="glyphicon glyphicon-list"></i> List of your forwards</h1>

    <p>Server secret is: <code>{{ socket_io_client_secret }}</code></p>

    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Incoming URL</th>
            <th>Private key</th>
            <th>Created at</th>
            <th>Updated at</th>
            <th class="text-center">Notifications</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for webHook in webHooks %}
            <tr>
                <td title="{{ webHook.id }}">
                    <a href="{{ path('webhook_show', {id: webHook.id}) }}">
                        {{ url('notifications', {'endpoint': webHook.endpoint}) }}
                    </a>
                </td>
                <td>
                    <code>{{ webHook.privateKey }}</code>
                </td>
                <td>
                    {{ webHook.createdAt|date('Y-m-d H:i:s') }}
                </td>
                <td>
                    {{ webHook.updatedAt|date('Y-m-d H:i:s') }}
                </td>
                <td class="text-center">
                    <a href="{{ path('webhook_show', {id: webHook.id}) }}">
                        <span class="label label-success">{{ webHook.notifications|length }}</span>
                    </a>
                </td>
                <td>
                    {{ form_start(delete_forms[webHook.id]) }}
                    <button class="btn btn-default btn-xs"><i class="glyphicon glyphicon-remove"></i></button>
                    {{ form_end(delete_forms[webHook.id]) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <p class="text-center">
        <a class="btn btn-primary" href="{{ path('webhook_new') }}"><i class="glyphicon glyphicon-plus"></i> Create a
            new webhook</a>
    </p>
{% endblock %}
