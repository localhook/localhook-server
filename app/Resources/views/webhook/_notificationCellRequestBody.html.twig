{% if content.body %}
    {% if content.request %}
        <table class="table table-striped table-condensed">
            {% for key, item in content.request %}
                <tr>
                    <th class="text-right">{{ key }}</th>
                    <td>{{ item|join(';') }}</td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <code>{{ content.body }}</code>
    {% endif %}
{% else %}
    No post content.
{% endif %}
