{% extends 'base.html.twig' %}

{% block body %}
    <h1>WebHook creation</h1>

    <p>Server secret is: <code>{{ socket_io_secret }}</code></p>

    <div class="row">
        <div class="col-lg-6">
            <div class="well bs-component">
                {{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
                    <fieldset>
                        <legend>Create a webhook</legend>
                        <div class="form-group">
                            <label for="inputEmail" class="col-lg-2 control-label">{{ form_label(form.endpoint) }}</label>
                            <div class="col-lg-10">
                                {{ form_widget(form.endpoint, {'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-10 col-lg-offset-2">
                                <a href="{{ path('webhook_index') }}" class="btn btn-default">Cancel</a>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </fieldset>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
