{% extends 'base_logged.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $('[data-focused-on-load]').focus();
        });
    </script>
{% endblock %}

{% block body %}
    <h1><i class="glyphicon glyphicon-plus"></i> Create a new forward</h1>

    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <div class="well bs-component">
                {{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
                <fieldset>
                    <legend>Easy as:</legend>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon3">{{ app.request.getSchemeAndHttpHost() }}
                                /{{ app.user.username }}/</span>
                            {{ form_widget(form.endpoint, {'attr':{'class':'form-control', 'data-focused-on-load': 1}}) }}
                            <span class="input-group-addon" id="basic-addon3"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <a href="{{ path('webhook_index') }}" class="btn btn-default">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
